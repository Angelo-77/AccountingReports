## ğŸ›  Balance Sheet Measures

â— M | % BalanceSheet Amount (Assets - Change - PercentImg) = 
VAR vAmountACT = 

    CALCULATE(
        SUMX(
            vwFactFinance,
            [M | $ BalanceSheetAMT]
        ),
        vwDimAccount[Side] = "Assets"
    )

VAR vPrevAmount = 
    CALCULATE(
        SUMX(
            vwFactFinance,
            [M | $ BalanceSheetAMT]
        ),
        vwDimAccount[Side] = "Assets",
        DATEADD(
            vwDimCalendar[date],
            -1,
            YEAR
        )
    )


VAR vPercent = DIVIDE(
    vAmountACT,
    vPrevAmount
   ) - 1


VAR vSymbol = 
    SWITCH(
        TRUE(),
        vPercent >0,
        "â®",
        vPercent <0,
        "â®Ÿ",
        "-"
    )
   
VAR vFormat = 
    FORMAT(
        vPercent,"#.00%"
    )

RETURN
    vFormat & vSymbol


